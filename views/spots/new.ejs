<h1>Add A New Spot</h1>

<div class="row">
  <form class="col s12" method="POST" action="/spots">
    <div class="row">
      <div class="input-field col s6">
        <input placeholder="Restaurant Name" id="name" name="name" type="text" class="validate">
        <label for="name">Spot Name</label>
      </div>
      <div class="input-field col s6">
        <input placeholder="Neighborhood" id="neighborhood" name="neighborhood" type="text" class="validate">
        <label for="neighborhood">Neighborhood</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input placeholder="address" id="address" name="address" type="text" class="validate">
        <label for="address">Address</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12 m8">
        <input placeholder="image" id="image" name="image" type="text" class="validate">
        <label for="image">Image URL</label>
      </div>
      <div class="input-field col s12 m4">
        <input placeholder="specialty" id="specialty" name="specialty" type="text" class="validate">
        <label for="specialty">Specialty</label>
      </div>
    </div>
    <div class="row">
      <div class="range-field col s12 m6">
        <input placeholder="rating" id="rating" name="rating" type="range" min="0" max="5" step="0.1">
        <label for="rating">Star Rating</label>
      </div>
      <div class="range-field col s12 m6">
        <input placeholder="Price" id="price" name="price" type="range" min="1" max="4">
        <label for="price">Price Point</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <textarea id="description" name="description" class="materialize-textarea"></textarea>
        <label for="description">Description</label>
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <label>
          <input type="checkbox" class="filled-in" name="sunday" value="true">
          <span>Open on Sunday?</span>
        </label>
      </div>
      <div class="col s6">
        <button class="btn waves-effect waves-light right" type="submit">Submit
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>
  </form>
</div>





